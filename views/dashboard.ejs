<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <header class="topbar">
      <h2>EDMS Dashboard</h2>
      <div class="user-info">
        Welcome, <strong><%= firstname %></strong> |
        <a href="/logout" class="logout-btn">Logout</a>
      </div>
    </header>

    <main class="container">
      <form method="get" action="/dashboard" class="search-bar">
        <input
          type="text"
          name="search"
          placeholder="Search files..."
          value="<%= search || '' %>"
        />
        <button type="submit">Search</button>
      </form>

      <section class="file-list">
        <% if (files.length === 0) { %>
        <div class="empty-state">
          <h3>No files found</h3>
          <p>Upload your first document to get started</p>
        </div>
        <% } else { %>
        <div class="file-grid">
          <% files.forEach(file => { %>
          <div class="file-card animate-fade-in">
            <div class="file-header">
              <div class="file-icon">
                ðŸ“„
              </div>
              <div class="file-info">
                <h3><%= file.originalName %></h3>
              </div>
            </div>

            <div class="file-meta">
              <div class="file-meta-item">
                <strong>Uploaded by:</strong> <%= file.uploadedBy %>
              </div>
              <div class="file-meta-item">
                <strong>Date:</strong> <%= new Date(file.uploadDate).toLocaleDateString() %>
              </div>
              <div class="file-meta-item">
                <strong>Size:</strong> <%= (file.size / 1024).toFixed(1) %> KB
              </div>
              <% if (file.description) { %>
              <div class="file-meta-item">
                <strong>Description:</strong> <%= file.description %>
              </div>
              <% } %>
            </div>

            <% if (file.tags && file.tags.length > 0) { %>
            <div class="file-tags">
              <% file.tags.forEach(tag => { %>
              <span class="file-tag"><%= tag %></span>
              <% }); %>
            </div>
            <% } %>

            <div class="file-actions">
              <a href="/download/<%= file.filename %>" class="button primary">Download</a>
              <a href="/delete/<%= file.filename %>" class="button danger"
                 onclick="return confirm('Are you sure you want to delete this file?')">Delete</a>
            </div>
          </div>
          <% }); %>
        </div>
        <% } %>
      </section>

      <section class="upload-form">
        <h3>Upload a New File</h3>
        <form action="/upload" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="document">
              Select File <span class="req">*</span>
            </label>
            <input type="file" name="document" id="document" required />
          </div>

          <div class="form-group">
            <label for="description">Description</label>
            <input
              type="text"
              name="description"
              id="description"
              placeholder="Short description of the document"
            />
          </div>

          <div class="form-group">
            <label for="tags">Tags</label>
            <input
              type="text"
              name="tags"
              id="tags"
              placeholder="e.g. finance, legal, contract (comma-separated)"
            />
          </div>

          <button type="submit" class="button primary">Upload File</button>
        </form>
      </section>
    </main>

    <footer>
      <p>&copy; <%= new Date().getFullYear() %> Paramraj Singh Machre</p>
    </footer>

    <script src="/js/app.js"></script>
  </body>
</html>
