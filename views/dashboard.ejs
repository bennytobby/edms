<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <header class="topbar">
      <h2>EDMS Dashboard</h2>
      <div class="user-info">
        Welcome, <strong><%= firstname %></strong>
        <span class="user-role role-<%= user.role %>"><%= user.role %></span> |
        <a href="/logout" class="logout-btn">Logout</a>
      </div>
    </header>

    <main class="container">
      <div class="dashboard-controls">
        <form method="get" action="/dashboard" class="search-bar">
          <input
            type="text"
            name="search"
            placeholder="Search files..."
            value="<%= search || '' %>"
          />
          <button type="submit">Search</button>
        </form>

        <form method="get" action="/dashboard" class="filter-controls">
          <select name="category" class="filter-select" onchange="this.form.submit()">
            <option value="">All Categories</option>
            <option value="documents" <%= (category === 'documents') ? 'selected' : '' %>>Documents</option>
            <option value="images" <%= (category === 'images') ? 'selected' : '' %>>Images</option>
            <option value="presentations" <%= (category === 'presentations') ? 'selected' : '' %>>Presentations</option>
            <option value="spreadsheets" <%= (category === 'spreadsheets') ? 'selected' : '' %>>Spreadsheets</option>
            <option value="archives" <%= (category === 'archives') ? 'selected' : '' %>>Archives</option>
          </select>

          <select name="sort" class="filter-select" onchange="this.form.submit()">
            <option value="newest" <%= (sort === 'newest') ? 'selected' : '' %>>Newest First</option>
            <option value="oldest" <%= (sort === 'oldest') ? 'selected' : '' %>>Oldest First</option>
            <option value="name" <%= (sort === 'name') ? 'selected' : '' %>>Name A-Z</option>
            <option value="size" <%= (sort === 'size') ? 'selected' : '' %>>Size</option>
            <option value="uploader" <%= (sort === 'uploader') ? 'selected' : '' %>>Uploader</option>
          </select>

          <!-- Preserve search term -->
          <input type="hidden" name="search" value="<%= search || '' %>">
        </form>
      </div>

      <section class="file-list">
        <% if (files.length === 0) { %>
        <div class="empty-state">
          <h3>No files found</h3>
          <p>Upload your first document to get started</p>
        </div>
        <% } else { %>
        <div class="file-grid">
          <% files.forEach(file => { %>
          <div class="file-card animate-fade-in">
            <div class="file-header">
              <div class="file-icon">
                üìÑ
              </div>
              <div class="file-info">
                <h3><%= file.originalName %></h3>
              </div>
            </div>

            <div class="file-meta">
              <div class="file-meta-item">
                <strong>Uploaded by:</strong> <%= file.uploadedBy %>
              </div>
              <div class="file-meta-item">
                <strong>Date:</strong> <%= new Date(file.uploadDate).toLocaleDateString() %>
              </div>
              <div class="file-meta-item">
                <strong>Size:</strong> <%= (file.size / 1024).toFixed(1) %> KB
              </div>
              <% if (file.category) { %>
              <div class="file-meta-item">
                <strong>Category:</strong>
                <span class="file-category category-<%= file.category %>"><%= file.category %></span>
              </div>
              <% } %>
              <% if (file.description) { %>
              <div class="file-meta-item">
                <strong>Description:</strong> <%= file.description %>
              </div>
              <% } %>
            </div>

            <% if (file.tags && file.tags.length > 0) { %>
            <div class="file-tags">
              <% file.tags.forEach(tag => { %>
              <span class="file-tag"><%= tag %></span>
              <% }); %>
            </div>
            <% } %>

            <div class="file-actions">
              <a href="/download/<%= file.filename %>" class="button primary">Download</a>
              <% if (user.role === 'admin' || (user.role === 'contributor' && file.uploadedBy === user.userid)) { %>
                <a href="/delete/<%= file.filename %>" class="button danger"
                   onclick="return confirm('Are you sure you want to delete this file?')">Delete</a>
              <% } else { %>
                <button class="button danger disabled"
                        onclick="alert('Contact your admin for delete permissions')"
                        title="Contact your admin for delete permissions">Delete</button>
              <% } %>
            </div>
          </div>
          <% }); %>
        </div>
        <% } %>
      </section>

      <section class="upload-section">
        <% if (user.role === 'admin' || user.role === 'contributor') { %>
        <div class="upload-header">
          <h3>Upload a New File</h3>
          <p>Add documents to your EDMS library with proper categorization</p>
        </div>

        <form action="/upload" method="POST" enctype="multipart/form-data" class="upload-form">
          <div class="form-row">
            <div class="form-group">
              <label for="document" class="form-label">
                Select File<span class="required">*</span>
              </label>
              <div class="file-input-wrapper">
                <input type="file" name="document" id="document" required class="file-input" />
                <label for="document" class="file-input-label">
                  <span class="file-input-text">Choose file</span>
                  <span class="file-input-icon">üìÅ</span>
                </label>
              </div>
            </div>

            <div class="form-group">
              <label for="category" class="form-label">Category<span class="required">*</span></label>
              <select name="category" id="category" required class="form-select">
                <option value="">Select a category</option>
                <option value="documents">Documents</option>
                <option value="images">Images</option>
                <option value="presentations">Presentations</option>
                <option value="spreadsheets">Spreadsheets</option>
                <option value="archives">Archives</option>
                <option value="other">Other</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="description" class="form-label">Description</label>
            <textarea
              name="description"
              id="description"
              class="form-textarea"
              placeholder="Short description of the document"
              rows="3"
            ></textarea>
          </div>

          <div class="form-group">
            <label for="tags" class="form-label">Tags</label>
            <input
              type="text"
              name="tags"
              id="tags"
              class="form-input"
              placeholder="e.g. finance, legal, contract (comma-separated)"
            />
            <small class="form-help">Separate multiple tags with commas</small>
          </div>

          <div class="form-actions">
            <button type="submit" class="button primary upload-btn">
              Upload File
            </button>
          </div>
        </form>
        <% } else { %>
        <div class="upload-disabled">
          <div class="upload-disabled-content">
            <div class="upload-disabled-icon">üìÅ</div>
            <h4>Upload Restricted</h4>
            <p>You don't have permission to upload files. Contact your admin for upload access.</p>
            <button class="button primary disabled"
                    onclick="alert('Contact your admin for upload permissions')"
                    title="Contact your admin for upload permissions">
              Upload File
            </button>
          </div>
        </div>
        <% } %>
      </section>
    </main>

    <footer>
      <p>&copy; <%= new Date().getFullYear() %> Paramraj Singh Machre</p>
    </footer>

    <script src="/js/app.js"></script>
  </body>
</html>
